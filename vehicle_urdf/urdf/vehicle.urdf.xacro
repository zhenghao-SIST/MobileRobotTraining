<?xml version="1.0"?>
<robot name="simple_diff_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <material name="blue"> <color rgba="0 0 0.8 1"/> </material>
  <material name="black"> <color rgba="0 0 0 1"/> </material>
  <material name="white"> <color rgba="1 1 1 1"/> </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.3 0.13 0.003"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.13 0.003"/>
      </geometry>
    </collision>
    <!--
    <visual>
      <geometry>
        <mesh filename="package://vehicle_urdf/meshes/chassis.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://vehicle_urdf/meshes/chassis.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    -->
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.0416" ixy="0" ixz="0" iyy="0.0708" iyz="0" izz="0.1041"/>
    </inertial>
  </link>

  <link name="left_wheel">
    <visual>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/> <geometry>
        <cylinder radius="0.045" length="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.045" length="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.00037" ixy="0" ixz="0" iyy="0.00037" iyz="0" izz="0.000625"/>
    </inertial>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.1 0.09 -0.0165" rpy="0 0 0"/> <axis xyz="0 1 0"/>
  </joint>

  <link name="right_wheel">
    <visual>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.045" length="0.04"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.045" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.00037" ixy="0" ixz="0" iyy="0.00037" iyz="0" izz="0.000625"/>
    </inertial>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.1 -0.09 -0.0165" rpy="0 0 0"/> <axis xyz="0 1 0"/>
  </joint>

  <link name="caster_wheel">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0002" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0002"/>
    </inertial>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.072 0 -0.0315" rpy="0 0 0"/>
  </joint>

  <gazebo>
    <plugin
      filename="gz-sim-diff-drive-system"
      name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      
      <wheel_separation>0.34</wheel_separation>
      <wheel_radius>0.035</wheel_radius>
      
      <topic>cmd_vel</topic>
      
      <odom_topic>odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>
  </gazebo>

  <gazebo reference="caster_wheel">
    <mu1>0.01</mu1>
    <mu2>0.01</mu2>
  </gazebo>

</robot>
